{
	"compilerOptions": {
		"lib": ["es2021"],
		"module": "commonjs",
		"target": "es2021",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": ["node", "jest"],
		"sourceMap": true
	},
	"exclude": ["node_modules", "jest.config.ts", "tests"]
}
